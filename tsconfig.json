{
    "compilerOptions": {
        "module": "Node16",
        "moduleResolution": "node16",
        "target": "ES2020", // nodejs 14
        "lib": ["ES2020", "DOM"],
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": false,
        "noImplicitReturns": true
